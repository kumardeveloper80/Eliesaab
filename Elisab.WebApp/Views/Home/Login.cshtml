
@{
  Layout = null;
}

<!DOCTYPE html>

<html>

<head>
  <meta name="viewport" content="width=device-width" />
  <title>Login</title>

  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
  <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
  <link href="~/Content/css/custom.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition login-page">
  @*<div class="loader_Main hide" id="AjaxLoader">
    <div class="loader"></div>
  </div>*@
  <div class="login-box">
    <div class="login-logo">
      <b>Admin Login</b>
    </div>
    <div class="login-box-body" id="loginDiv">
      <p class="login-box-msg">Sign in to start your session</p>
      <form onkeypress="onKeyPressForm(event)">
        <div class="form-group has-feedback">
          <input type="text" class="form-control" placeholder="User name" id="txtUserName">
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>

        <div class="form-group has-feedback">
          <input type="password" class="form-control" placeholder="Password" id="txtPassword">
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>

        <div class="row">

          <div class="col-xs-8">
            <label>
              <a href="javascript:void(0)" onclick="onForgotPassword()">Forgot Password ?</a>
            </label>
          </div>

          <div class="col-xs-4">
            <button type="button" class="btn btn-primary btn-block btn-flat" onclick="login()">Sign In</button>
          </div>
        </div>
      </form>

    </div>

    <div class="login-box-body hide" id="forgotPwdDiv">
      <p class="login-box-msg">Forgot Password</p>

      <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Email" id="txtEmail">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="col-xs-8">
          <label>
            <a href="javascript:void(0)" onclick="onLogin()">Sign In</a>
          </label>
        </div>

        <div class="col-xs-4">
          <button type="button" class="btn btn-primary btn-block btn-flat" onclick="forgotPassword()">Send Mail</button>
        </div>
      </div>

    </div>

  </div>

  <script src="/Content/js/plugins/jquery/jquery-3.3.1.min.js?@Elisab.WebApp.Helper.Helper.UnqiueId()"></script>
  <script src="/Content/js/plugins/bootstrap/bootstrap.min.js?@Elisab.WebApp.Helper.Helper.UnqiueId()"></script>
  <script src="~/Content/js/plugins/notify/bootstrap-notify.min.js?@Elisab.WebApp.Helper.Helper.UnqiueId()"></script>
  <script src="~/Script/Authentication.js?@Elisab.WebApp.Helper.Helper.UnqiueId()"></script>
  <script src="~/Script/Message.js?@Elisab.WebApp.Helper.Helper.UnqiueId()"></script>
  <script src="~/Script/common.js"></script>
</body>
</html>
