@{
  Layout = null;
}
<link href="~/Content/css/custom.css" rel="stylesheet" />
<body>
  <link href="~/Content/css/AdminLTE.css" rel="stylesheet" />
  <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    @model List<Elisab.BAL.ViewModel.ImageGallery_VM>
    @{
        <div class="container">
          <div class="row text-center">
            <div class="col-xs-12 gallary-page-logo">
              <img src="~/Content/images/logo-large.png" alt="ESHC_STD" title="ESHC_STD">
            </div>            
          </div>
          <div class="row">
            @foreach (var item in Model)
            {
              string fullpath = "/GalleryImg/" + item.ThumbImage;
              string imgfullPath = "/GalleryImg/" + item.Image;
              <div class="col-md-3 gallery-image">
                <img id="@item.Id" class="img-responsive" src="@fullpath">
                <div class="download-icon">
                  <a href="@imgfullPath" target="_blank">
                    <i class="fa fa-download" aria-hidden="true"></i>
                  </a>
                </div>
              </div>
            }
          </div>
        </div>
    }
  <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
</body>
